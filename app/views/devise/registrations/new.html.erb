<div class="container mt-5">
  <h2><%= t('devise.registrations.title') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
    <div class="mb-3">
      <%= f.label :first_name, t('devise.registrations.label_name') %>
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, t('devise.registrations.label_surname') %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
    <%= f.label :role, t('devise.registrations.label_role') %>
    <%= f.select :role, [[t('devise.registrations.role_options.creator'), 'creator'], [t('devise.registrations.role_options.expert'), 'expert']], {}, class: "form-select" %>
  </div>


    <div class="mb-3">
      <%= f.label :email, t('devise.registrations.label_email') %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, t('devise.registrations.label_password') %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password_confirmation, t('devise.registrations.label_password_conf') %>
      <%= f.password_field :password_confirmation, class: "form-control" %>
    </div>

    <%= f.submit t('devise.registrations.btn_register'), class: "btn btn-success w-100" %>
  <% end %>
  <div class="mt-3">
    <%= render "devise/shared/links" %>
  </div>
</div>


