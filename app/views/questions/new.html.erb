<div class="container mt-5">
  <h3><%= t('question.new.title') %></h3>

  <%= form_with model: [@project, @question], local: true do |f| %>
    <div class="mb-3">
      <%= f.text_area :question, class: "form-control" %>
    </div>
    
    <div class="d-flex gap-2">
      <%= f.submit t('question.new.btn_save'), class: "btn btn-success" %>
      <%= link_to t('question.new.btn_cancel'), project_path(@project), class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
